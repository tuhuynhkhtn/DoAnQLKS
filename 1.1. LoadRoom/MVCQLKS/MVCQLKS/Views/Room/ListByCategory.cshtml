@using MVCQLKS.Models
@model IList<Room>

@section style{
    <style type="text/css">
        .thumbnail{
            min-height: 90px;
        }
    </style>
    }

@section ContentHeader{
    Danh sách phòng
}

@if(Model.Count == 0)
{
    <p>Không có phòng</p>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@p.RoomName</h3>
                    <h4>Giá: @string.Format("{0:C}", @p.Price)</h4>
                    <h4>Tình trạng: 
                    @if (@p.Status > 0)
                    {
                        @:Đã cho thuê
                    }
                    else
                    {
                        @:Còn trống
                    }
                    </h4>
                </div>
            </div>
        </div>
        }
    </div>
}